{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["title", "author", "publishers"],
    "properties": {
      "title": {
        "type": "string",
        "minLength": 1,
        "description": "Título del libro (requerido)"
      },
      "subtitle": {
        "type": "string",
        "minLength": 1,
        "description": "Subtítulo opcional del libro"
      },
      "author": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "minLength": 1
        },
        "description": "Array de autores (mínimo 1 autor requerido)"
      },
      "publishers": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "minLength": 1
        },
        "description": "Array de editoriales (mínimo 1 editorial requerida)"
      },
      "image": {
        "type": "string",
        "pattern": "^/books/.*\\.(webp|jpg|jpeg|png)$",
        "description": "Ruta a la imagen de portada (debe comenzar con /books/ y tener extensión válida)"
      },
      "readDate": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "description": "Fecha de lectura en formato YYYY-MM-DD (opcional)"
      }
    },
    "additionalProperties": false
  },
  "minItems": 1,
  "description": "Array de libros adquiridos en FIL 2025"
}
